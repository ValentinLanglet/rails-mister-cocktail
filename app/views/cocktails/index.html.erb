<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1543007630-9710e4a00a20?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60);">
  <h1> Hello to the bar</h1>
  <button class="btn btn-primary" type="button"><%= link_to 'add a cocktail', new_cocktail_path %></button>

</div>
  <div class="container mt-3 mb-3">
    <div class="grid-cocktails">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.attachment.nil? %>
          <%= link_to cocktail_path(cocktail), class: "card" , style: " background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1500217052183-bc01eee1a74e?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8N3x8ZHJpbmt8ZW58MHx8MHw%3D&auto=format&fit=crop&w=800&q=60')" do %>
            <%= cocktail.name %>
          <% end %>
        <% else %>
          <%= link_to cocktail_path(cocktail), class: "card" , style: " background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('#{cl_image_path cocktail.photo.key} ')" do %>
            <%= cocktail.name %>
          <% end %>
        <% end %>
     <% end %>
    </div>
  </div>

